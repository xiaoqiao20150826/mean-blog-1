    body(data-module="#{modules}")
        nav.navbar.navbar-inverse.navbar-fixed-top
            div.container
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/") My Blog

                div.collapse.navbar-collapse
                    ul#navbar.nav.navbar-nav
                        li.active
                            a(href="/") 主页
                        li#nav-login
                            a(href="/users/login") 登陆
                        li#nav-reg
                            a(href="/users/reg") 注册

        div#container.container
            div.main-body
                block content

        hr
        footer
            p
                a(href="https://wenzhiquan.github.io/blog" target="_blank") Powered by wenzhiquan
